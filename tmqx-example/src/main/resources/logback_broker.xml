    <logger name="brokerLog" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="JmqttBrokerAppender"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="clientTraceLog" additivity="false">
