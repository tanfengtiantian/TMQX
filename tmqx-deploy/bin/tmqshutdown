#!/bin/sh

pid=`ps ax | grep -i 'org.tmqx.broker.BrokerStartup' |grep java | grep -v grep | awk '{print $1}'`
if [ -z "$pid" ] ; then
        echo "No TmqxBroker running."
        exit -1;
fi

echo "The TmqxBroker(${pid}) is running..."

kill ${pid}

echo "Send shutdown request to TmqxBroker(${pid}) OK"

